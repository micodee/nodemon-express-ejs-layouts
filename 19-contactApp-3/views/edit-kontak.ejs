<div class="container mt-3">
  <div class="row col-md-6">
    <h2>Form Ubah Data Kontak</h2>

    <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
            <ul>
                <% errors.forEach(error => { %>
                    <li><%= error.msg %> </li>
                <% }) %>
            </ul>
          </div>
    <% } %>

    <form method="post" action="/kontak/update">
      <input type="hidden" name="oldNama" value="<%= (kontak.oldNama) ? kontak.oldNama : kontak.nama %>">
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input type="text" class="form-control" id="nama" name="nama" required value="<%= kontak.nama %>">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required value="<%= kontak.email %>">
        </div>
        <div class="mb-3">
            <label for="noHp" class="form-label">No Hp</label>
            <input type="number" class="form-control" id="noHp" name="nohp" required value="<%= kontak.nohp %>">
          </div>
        <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
      </form>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!kontak) { %>
        <div class="alert alert-danger fw-bold" role="alert">
            Data contact tidak ada. <br>
            <a href="/kontak" class="alert-link fw-normal">&laquo; Kembali ke daftar kontak</a>
          </div>
      <% } else { %> 
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= kontak.nama %> </h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= kontak.nohp %> </h6>
          <p class="card-text"><%= kontak.email %> </p>
          <a href="/kontak/delete/<%= kontak.nama %>" class="btn btn-danger badge" onclick="return confirm('yakin?')">Hapus</a>
          <a href="/kontak" class="card-link d-block mt-3"
            >&laquo; Kembali ke daftar kontak</a
          >
        </div>
      </div>
      <% } %> 
    </div>
  </div>
</div>
